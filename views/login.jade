extends layout

block content
	.container
		#loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:140px;')
			.panel.panel-info
				.panel-heading
					.panel-title Admin Log In
					div(style='float:right; font-size: 80%; position: relative; top:-10px')
						a(href='#' ,style="text-decoration:none;color:#7071a7") Forgot password?
				.panel-body(style='padding-top:30px')
					#login-alert.alert.alert-danger.col-sm-12(style='display:none')
					form#loginform.form-horizontal(role='form',method='post',action='/admins/login')
						.input-group(style='margin-bottom: 25px')
							span.input-group-addon
								i.glyphicon.glyphicon-user
							input#login-username.form-control(type='text', name='username', value='', placeholder='Enter Username ')
						.input-group(style='margin-bottom: 25px')
							span.input-group-addon
								i.glyphicon.glyphicon-lock
							input#login-password.form-control(type='password', name='password', placeholder='Enter Password')
						.input-group
							.checkbox
								label
									input#login-remember(type='checkbox', name='remember', value='1')
									|  Remember me
						.form-group(style='margin-top:10px')
							.col-sm-12.controls
								input.btn.btn-info(type='submit',name='submit',value='Log In')  
								
						.form-group
							.col-md-12.control
								div(style='border-top: 1px solid#888; padding-top:15px; font-size:85%')
									a(href='/',style="text-decoration:none;color:#7071a7") Go to Home page
										
									
										
